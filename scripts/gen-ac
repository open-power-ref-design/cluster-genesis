_gen()
{
    local cur prev opts
    COMPREPLY=()
    cur="${COMP_WORDS[COMP_CWORD]}"
    prev="${COMP_WORDS[COMP_CWORD-1]}"
    prevprev="${COMP_WORDS[COMP_CWORD-2]}"
    opts="-h --help --bridges --gateway -a --all -f -p"

    if [[ ${cur} == -* ]] && [[ ${prev} == setup ]]; then
        COMPREPLY=( $(compgen -W "${opts}" -- ${cur}) )
        return 0
    fi

    opts="-h --help --create-container --mgmt-switches --data-switches -a --all -f -p"

    if [[ ${cur} == -* ]] && [[ ${prev} == config ]]; then
        COMPREPLY=( $(compgen -W "${opts}" -- ${cur}) )
        return 0
    fi

    opts="-h --help --config-file --cluster-hardware -a --all -f -p"

    if [[ ${cur} == -* ]] && [[ ${prev} == validate ]]; then
        COMPREPLY=( $(compgen -W "${opts}" -- ${cur}) )
        return 0
    fi

    opts="-h --help --create-inventory --inv-add-ports-ipmi --inv-add-ports-pxe \
         -a --all -f -p"

    if [[ ${cur} == -* ]] && [[ ${prev} == deploy ]]; then
        COMPREPLY=( $(compgen -W "${opts}" -- ${cur}) )
        return 0
    fi

    opts="setup config validate deploy"

    if [[ ${cur} == * ]] && [[ ${prevprev} != gen ]]; then
        COMPREPLY=( $(compgen -W "${opts}" -- ${cur}) )
        return 0
    fi
}

complete -F _gen gen
