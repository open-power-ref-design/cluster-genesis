{% if 'description' not in item %}
# {{ item['label'] }}
{% else %}
# {{ item['description'] }} ({{ item['DEVICE'] }})
{% endif %}
{% for key, value in item.iteritems() %}
    {% if key not in ['label', 'description', 'BONDING_OPTS'] %}
        {% if value == true %}
{{ key }}={{ 'yes' }}
        {% elif value == false %}
{{ key }}={{ 'no' }}
        {% else %}
{{ key }}={{ value }}
        {% endif %}
    {% endif %}
    {% if key == 'BONDING_OPTS' %}
{{ key }}={{ '"' }}{{ value }}{{ '"' }}
    {% endif %}
{% endfor %}
